    <div class="page">

        <!-- Breadcrumbs -->
        <section class="bg-gray-7">
            <div class="breadcrumbs-custom box-transform-wrap context-dark">
                <div class="container">
                    <h3 class="breadcrumbs-custom-title">DRIVER RECRUITMENT</h3>
                    <div class="breadcrumbs-custom-decor"></div>
                </div>
                <div class="box-transform" @*style="background-image: url(images/bg-1.jpg);"*@></div>
            </div>
            <div class="container">
                <ul class="breadcrumbs-custom-path">
                    <li><a href="/Home/Index">Trang Chủ</a></li>
                    <li class="active">Tuyển Dụng</li>
                </ul>
            </div>
        </section>
        <!-- Contacts-->

        <section class="section section-lg bg-default text-md-left">
            <div class="container">
                <div class="row row-60 justify-content-center">
                    <div class="col-lg-8">
                        <h4 class="text-spacing-25 text-transform-none">Recruitment Information Input</h4>
                        @*<form class="rd-form rd-mailform" data-form-output="form-output-global" data-form-type="contact" method="post" action="Contact/Add">*@
                        <form action="/Contact/Index" method="post" role="form" class="signup-form" enctype="multipart/form-data">

                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })

                            <div class="row row-20 gutters-20">
                                <div class="col-md-6">
                                    <div class="form-wrap">
                                        <input class="form-input" id="Name" type="text" name="Name" placeholder="Your Name*" @*data-constraints="@Required"*@>
                                    </div>
                                    @Html.ValidationMessageFor(row => row.Name)

                                </div>
                                <div class="col-md-6">
                                    <div class="form-wrap">
                                        <input class="form-input" id="Email" type="email" name="Email" placeholder="Your E-mail*" @*data-constraints="@Email @Required"*@>
                                    </div>
                                    @Html.ValidationMessageFor(row => row.Email)

                                </div>

                                <div class="col-md-6">
                                    <div class="form-wrap">
                                        <input class="form-input" id="PhoneNumber" type="text" name="PhoneNumber" placeholder="Your Phone*" @*data-constraints="@Numeric"*@>
                                    </div>
                                    @Html.ValidationMessageFor(row => row.PhoneNumber)

                                </div>
                                <div class="col-md-6">
                                    <div class="form-wrap">
                                        <input class="form-input" id="CCCDorCMND" type="text" name="CCCDorCMND" placeholder="CCCDorCMND*" @*data-constraints="@Numeric"*@>
                                    </div>
                                    @Html.ValidationMessageFor(row => row.CCCDorCMND)

                                </div>
                                <div class="col-md-12">
                                    <div class="form-wrap">
                                        <textarea class="form-input textarea-lg" id="DiaChi" name="DiaChi" placeholder="Address*"></textarea> @*data-constraints="@Numeric"*@
                                    </div>
                                    @Html.ValidationMessageFor(row => row.DiaChi)

                                </div>


                                @*<div class="col-md-12">
                                    @Html.TextBoxFor(x => x.ImagePapers, new { @id = "txtImage1", @class = "form-control" })
                                    <input type="button" value="Tải ảnh CCCD" onclick="BrowseServer('txtImage1');" />
                                </div>*@

                                <div class="col-md-12">
                                    <div class="form-wrap">
                                        <input type="file" name="ImageFile" id="ImageFile" accept=".png, .jpg, .jpeg" />
                                    </div>
                                    @Html.ValidationMessageFor(row => row.ImagePeople)
                                </div>
                                <div class="col-md-12">
                                    <div class="form-wrap">
                                        <input type="file" name="ImageFile1" id="ImageFile" accept=".png, .jpg, .jpeg" />
                                    </div>
                                    @Html.ValidationMessageFor(row => row.ImagePapers)
                                </div>
                                <div class="col-md-12">
                                    <div class="form-wrap">
                                        <textarea class="form-input textarea-lg" id="Message" name="Message" placeholder="Loại xe:Exciter Màu xe:Xanh dương Biển số:88554"></textarea> @*data-constraints="@Numeric"*@
                                    </div>
                                    @Html.ValidationMessageFor(row => row.Message)

                                </div>

                            </div>
                            <button class="button button-secondary button-winona" type="submit">Contact us</button>
                        </form>
                    </div>
                    <div class="col-lg-4">
                        <div class="aside-contacts">
                            <div class="row row-30">
                                <div class="col-sm-6 col-lg-12 aside-contacts-item">
                                   

                                </div>
                                <div class="col-sm-6 col-lg-12 aside-contacts-item">
                                    <p class="aside-contacts-title">Phone</p>
                                    <div class="unit unit-spacing-xs justify-content-center justify-content-md-start">
                                        <div class="unit-left"><span class="icon mdi mdi-phone"></span></div>
                                        <div class="unit-body"><a class="phone" href="tel:#">0999999999</a></div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-12 aside-contacts-item">
                                    <p class="aside-contacts-title">E-mail</p>
                                    <div class="unit unit-spacing-xs justify-content-center justify-content-md-start">
                                        <div class="unit-left"><span class="icon mdi mdi-email-outline"></span></div>
                                        <div class="unit-body"><a class="mail" href="mailto:#">hutechfood@gmail.com</a></div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-12 aside-contacts-item">
                                    <p class="aside-contacts-title">Address</p>
                                    <div class="unit unit-spacing-xs justify-content-center justify-content-md-start">
                                        <div class="unit-left"><span class="icon mdi mdi-map-marker"></span></div>
                                        <div class="unit-body"><a class="address" href="https://goo.gl/maps/Cf8f8aVMhqy5Ewkb7">10/80C XL Hà Nội, Phường Tân Phú, Thủ Đức, Thành phố Hồ Chí Minh, Việt Nam <br class="d-md-none">Alexandria, VA, 2230</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
